<h1 align="center"> Welcome to login</h1>
<%= form_for :user, :url=>{:action=>:index} do |f| %>


    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.text_field :password %>
    </div>
    <%= submit_tag "Login" , :class => "submit" %>
<% end %>