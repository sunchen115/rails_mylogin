<%= form_for :user, :url=>{:action=>:create} do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user to loggin:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
